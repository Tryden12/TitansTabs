<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:id="@+id/frame_layout_main_frag"
    tools:context=".ui.main.view.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_icon_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:background="@drawable/card_bg"
            android:elevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/roster_icon_imageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:elevation="20dp"
                        app:srcCompat="@drawable/icon_helmet" />

                    <TextView
                        android:id="@+id/roster_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:text="@string/roster"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/steel_grey"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/schedule_icon_imageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:elevation="20dp"
                        app:srcCompat="@drawable/icon_schedule" />

                    <TextView
                        android:id="@+id/schedule_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:text="@string/schedule"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/steel_grey"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/depth_chart_icon_imageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:elevation="20dp"
                        app:srcCompat="@drawable/icon_depth_chart" />

                    <TextView
                        android:id="@+id/depth_chart_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:text="@string/depth_chart"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/steel_grey"
                        android:textSize="@dimen/_8sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stats_icon_imageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:elevation="20dp"
                        app:srcCompat="@drawable/icon_stats" />

                    <TextView
                        android:id="@+id/stats_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:text="@string/stats"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/steel_grey"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/photos_icon_imageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:elevation="20dp"
                        app:srcCompat="@drawable/icon_photos" />

                    <TextView
                        android:id="@+id/photos_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:text="@string/photos"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/steel_grey"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/edit_icon_imageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:elevation="20dp"
                        app:srcCompat="@drawable/icon_edit" />

                    <TextView
                        android:id="@+id/edit_icon_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="12dp"
                        android:text="@string/edit"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/steel_grey"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textview_news_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/news"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_16sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/recycler_bg"
            android:elevation="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/search_editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/shape_edittext"
            android:drawableLeft="@drawable/ic_search2"
            android:elevation="@dimen/_10sdp"
            android:hint="@string/search_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_30sdp"
            android:textAlignment="textStart"
            android:textColorHint="@color/baby_blue"
            android:textSize="@dimen/_14sdp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/button_bg_main"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>